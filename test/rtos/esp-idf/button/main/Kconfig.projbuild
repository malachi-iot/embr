menu "Embr Button Test"

    choice
        prompt "Test mode"

        config POLLED_MODE
            bool "polled"

        config ISR_MODE
            bool "isr"

    endchoice

    choice
        prompt "ISR mode (inactive, always callback - keeping for Kconfig reference)"
        depends on ISR_MODE

        config ISR_LOW_LEVEL_MODE
            bool "low level"

        config ISR_CALLBACK_MODE
            bool "callback"

    endchoice
            
            

    menu "GPIO"

        config BUTTON_PIN
            int "Pin on which debounced button is tested"
            default 0

    endmenu

endmenu
